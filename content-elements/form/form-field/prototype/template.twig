{% macro render(text = null, elementId = null, elementPartId = null, formTextPartId = null, errorRequiredPartId = null, errorInvalidPartId = null) %}{% apply spaceless %}
    {% set text = text ?: bsi_cx_lorem(9) %}
    {% set elementId = elementId ?: 'form-field-REEhtN' %}
    {% set elementPartId = elementPartId ?: 'form-field-part-H72Mnu' %}
    {% set formTextPartId = formTextPartId ?: 'form-field-part-text-T9yfhp' %}
    {% set errorRequiredPartId = errorRequiredPartId ?: 'form-field-part-error-required-904DIx' %}
    {% set errorInvalidPartId = errorInvalidPartId ?: 'form-field-part-error-invalid-5g1mUc' %}

    <div x-data="formField" data-bsi-element="{{ elementId }}" class="{{ 'bsi-element-' ~ elementId }} mb-4 bsi-form-element bsi-form-field-element bsi-form-flex-label" data-bsi-element-part="{{ elementPartId }}">
        <div class="bsi-form-input-element bsi-label-floating-element mb-3">
            <label for="field" class="form-label">Label</label>
            <input x-init="initFormFieldInput" x-on:change="validateInput" type="text" class="form-control bsi-form-field-input" id="field" value="">
            <div data-bsi-element-part="{{ formTextPartId }}" class="form-text">{{ text }}</div>
            <div x-init="initRequiredError" class="invalid-feedback">
                <label data-bsi-element-part="{{ errorRequiredPartId }}">Please fill out this field.</label>
            </div>
            <div x-init="initInvalidError" class="format-invalid-feedback" hidden="true" aria-hidden="true">
                <label data-bsi-element-part="{{ errorInvalidPartId }}" class="errormessage-invalid">The value you entered for this field is invalid.</label>
            </div>
        </div>
    </div>

{% endapply %}{% endmacro %}