{% macro render(elementId = null, elementPartId = null, imageSrc = null) %}{% apply spaceless %}
    {% set elementId = elementId ?: 'recaptcha-es8WAZ' %}
    {% set elementPartId = elementPartId ?: 'recaptcha-part-xMHmU5' %}
    {% set imageSrc = imageSrc ?: bsi_cx_asset('./recaptcha.png') %}

    <div data-bsi-element="{{ elementId }}" class="{{ 'bsi-element-' ~ elementId }} mb-4" data-bsi-element-part="{{ elementPartId }}">
        <img data-bsi-remove-if="live" src="{{ imageSrc }}" class="figure-img" alt="reCAPTCHA" />
        <label data-bsi-remove-if="live">reCAPTCHA</label>
        <input data-bsi-remove-if="live" type="text" data-bsi-form-field-type="captcha" value="Google reCAPTCHA" id="g-recaptcha-response" name="g-recaptcha-response">
        <div class="g-recaptcha" data-sitekey="the site key from the google api recaptcha registration">
        </div>
    </div>

{% endapply %}{% endmacro %}