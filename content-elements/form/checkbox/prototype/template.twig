{% macro render(text = null, elementId = null, elementPartId = null, errorRequiredPartId = null) %}{% apply spaceless %}
    {% set text = text ?: bsi_cx_lorem(9) %}
    {% set elementId = elementId ?: 'checkbox-24CNSe' %}
    {% set elementPartId = elementPartId ?: 'checkbox-part-Nls88s' %}
    {% set formTextPartId = formTextPartId ?: 'checkbox-part-text-6ycJm4' %}
    {% set errorRequiredPartId = errorRequiredPartId ?: 'checkbox-part-error-required-iYG8Ss' %}

    <div data-bsi-element="{{ elementId }}" class="{{ 'bsi-element-' ~ elementId }} mb-4 bsi-form-element form-check bsi-form-flex-label bsi-checkbox-spacing-visible bsi-form-switch-hide" data-bsi-element-part="{{ elementPartId }}">
        <div class="bsi-form-input-element">
            <input class="form-check-input" type="checkbox" id="switch">
            <label class="form-check-label" for="switch">Lorem ipsum</label>
        </div>
        <div data-bsi-element-part="{{ formTextPartId }}" class="form-text">{{ text }}</div>
        <div class="invalid-feedback">
            <label data-bsi-element-part="{{ errorRequiredPartId }}">Please fill out this field.</label>
        </div>
    </div>
{% endapply %}{% endmacro %}